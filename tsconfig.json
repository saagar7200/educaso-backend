{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2016",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./build/",
    "rootDir": "./src/",
    "strict": false,
    "noImplicitAny": false,
    "baseUrl": "./src/",
    // "typeRoots": ["node_modules/@types","*/@types"],
    "paths": {
      "*": [
        "node_modules"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/config.ts",
    "src/swagger.mjs"
  ],
  "exclude": [
    "movies",
    "**/*.legacy.ts",
    "node_modules/**/*.ts"
  ]
}